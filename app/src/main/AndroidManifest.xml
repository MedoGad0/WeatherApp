<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elabasy.MyWeatherApp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyWeatherApp">
        <activity
            android:name=".Ui.Activities.SingleCountry.SingleCountryActivity"
            android:exported="true" />
        <activity
            android:name=".Ui.Activities.Home.HomeActivity"
            android:exported="true" />
        <activity
            android:name=".Ui.Activities.Options.OptionsActivity"
            android:exported="true" />
        <activity
            android:name=".Ui.Splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>